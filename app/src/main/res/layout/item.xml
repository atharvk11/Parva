<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="280dp"
    android:layout_marginLeft="7dp"
    android:layout_marginTop="13dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="10dp"
    app:layout_constraintCircleRadius="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/layout"
            android:padding="15dp">

            <TextView
                android:id="@+id/community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community Name"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trumpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/community"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trumpTitle"
                android:layout_marginTop="08dp"
                android:text="By"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/nameAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trumpTitle"
                android:layout_marginLeft="07dp"
                android:layout_marginTop="08dp"
                android:layout_toRightOf="@+id/by"
                android:text="John Doe"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameAuthor"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Lorem"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="16dp"
                android:text="21 June 2020"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/date"
                android:src="@drawable/ic_lock" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/lock"
                android:src="@drawable/reply"
                android:tint="@android:color/white" />
        </RelativeLayout>


        <androidx.cardview.widget.CardView

            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            android:background="@drawable/background"
            android:elevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/postTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="POST"
                    android:textColor="#00008B" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
